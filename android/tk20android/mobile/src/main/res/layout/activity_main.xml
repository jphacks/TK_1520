<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
                  android:layout_gravity="center_vertical"
                  android:orientation="horizontal">
        <EditText android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:id="@+id/ipEdit"
                  android:hint="ip-addr"/>
        <Button android:layout_width="50dp" android:layout_height="match_parent"
                android:id="@+id/ipButton"
                android:layout_margin="4dp"/>

    </LinearLayout>
    <WebView android:id="@+id/webView"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>



</LinearLayout>
